{
    "name": "SQL Injection Detector",
    "version": "1.0",
    "manifest_version": 3,
    "description": "Detects and prevents SQL injection attacks in the active tab",
    "permissions": [
      "declarativeNetRequest",
      "activeTab",
      "tabs",
      "activeTab",
      "storage",
      "notifications",
      "scripting"
    ],
    "host_permissions": ["<all_urls>"],
    "declarative_net_request": {
      "rule_resources": [
        {
          "id": "sql_rules",
          "enabled": true,
          "path": "rules.json"
        }
      ]
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    }
  }
  